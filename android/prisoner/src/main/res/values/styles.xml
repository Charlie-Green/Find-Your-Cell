<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="contactview_edittext_theme">
        <item name="android:textColorSecondary">@android:color/transparent</item>
    </style>

    <style name="prisoner_textinput_hint_textappear">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="auth_textinput_hint_textappear" parent="prisoner_textinput_hint_textappear" >
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <!-- colorAccent: line in the bottom of EditText when it's selected. -->
    <!-- textColorHint: color of the hint when it's collapsed -->
    <style name="prisoner_textinput_theme">
        <item name="colorAccent">?colorPrimary</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <style name="auth_textinput_theme" parent="prisoner_textinput_theme" />

    <style name="schedule_fragm_button">
        <item name="android:textSize">14dp</item>
        <item name="android:backgroundTint">@color/statelist_enablable_button</item>
        <item name="android:textColor">?backgroundColor</item>
    </style>

    <style name="cell_fragm_label">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="cell_option">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="auth_credential_info">
        <item name="android:width">24dp</item>
        <item name="android:height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:src">@drawable/ic_info</item>
        <item name="android:tint">?android:textColorSecondary</item>
    </style>


    <style name="arest_date_textappear">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="arest_jails_textappear">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="addarest_button">
        <item name="android:backgroundTint">?backgroundColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>