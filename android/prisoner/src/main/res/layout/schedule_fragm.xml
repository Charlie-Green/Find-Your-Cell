<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recvCells"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cells_recycler_height" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recvDays"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buAddCell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                style="@style/schedule_fragm_button"
                android:text="@string/add_cell" />

            <Button
                android:id="@+id/buSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/schedule_fragm_button"
                android:text="@string/save"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/prBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:theme="@style/primary_tinted_progressbar_theme"
        android:visibility="gone" />

</FrameLayout>