<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdltRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.zenkevich_churun.findcell.prisoner.ui.root.activity.PrisonerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="by.zenkevich_churun.findcell.core.util.behave.snackbar.RespectSnackbarBehavior" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:elevation="6dp"
            app:titleTextColor="#f0f0f0" />


        <androidx.drawerlayout.widget.DrawerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <fragment
                android:id="@+id/navHost"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true" />


            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navDrawer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:menu="@menu/prisoner"
                app:itemIconTint="@color/statelist_navmenu_icon"
                app:itemTextColor="@color/statelist_navmenu_icon" />

        </androidx.drawerlayout.widget.DrawerLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>