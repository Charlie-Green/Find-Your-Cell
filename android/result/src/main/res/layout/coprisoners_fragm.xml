<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:padding="8dp">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:layout_height="0dp" >


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/coprisoners_tabs_back"
                app:tabBackground="@drawable/primaryselected_tab_back"
                app:tabTextColor="?colorPrimary"
                app:tabSelectedTextColor="?backgroundColor"
                app:tabRippleColor="@android:color/transparent"
                app:tabMaxWidth="0dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorColor="@android:color/transparent" >

                <!-- The tabs are added programmatically. -->

            </com.google.android.material.tabs.TabLayout>


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <ImageView
        android:id="@+id/imgvProfile"
        android:layout_width="@dimen/profile_button_height"
        android:layout_height="@dimen/profile_button_height"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_back"
        app:tint="?colorPrimary" />

    <TextView
        android:id="@+id/txtvProfile"
        android:layout_gravity="fill"
        android:layout_width="0dp"
        android:layout_height="@dimen/profile_button_height"
        android:layout_marginEnd="@dimen/profile_button_margin_end"
        android:paddingTop="@dimen/profile_button_padding_top"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="start"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?colorPrimary"
        android:text="@string/back_to_profile" />


</GridLayout>