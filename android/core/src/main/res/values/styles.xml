<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="empty_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="primary_tinted_progressbar_theme">
        <item name="colorAccent">?colorPrimary</item>
    </style>

    <style name="datepicker_dialog_theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@color/primary</item>

        <!-- Calendar's mode button background: -->
        <item name="backgroundTint">@color/primary</item>
    </style>


    <style name="contactview_edittext_theme">
        <item name="android:textColorSecondary">@android:color/transparent</item>
    </style>

</resources>