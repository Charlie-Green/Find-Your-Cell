<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">#2040ff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorSecondary">#b0b0b0</item>
        <item name="backgroundColor">@color/back</item>

        <item name="materialCalendarFullscreenTheme">@style/datepicker_dialog_theme</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="actionMenuTextColor">?backgroundColor</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeClose</item>
    </style>

    <style name="ActionModeClose">
        <item name="android:tint">#fbfbfb</item>
    </style>

</resources>